<div class="navbar navbar-expand-sm navbar-light navbar-byourfamous">
  <%= link_to "/", class: "navbar-brand" do %>
    <%= image_tag "byourfamous_logo.png"%>
  <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
    <div class="flex-container" id="indexnavbar">
      <div class="nav-item active">
        <%= link_to "L'agence", agence_path, class: "nav-link black" %>
      </div>
      <div class="nav-item">
        <%= link_to "Références personnalités", references_path, class: "nav-link black" %>
      </div>
      <div class="nav-item active">
        <a class="nav-link black" href="#">News</a>
      </div>
      <div class="nav-item">
        <%= link_to "Contact", contact_path, class: "nav-link black" %>
      </div>
    </div>
  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item active">
      </li>
        <% if current_user %>
        <li class="nav-item dropdown">
          <%= image_tag "photoanais.jpg", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "Déconnexion", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        <% else %>
          <%= image_tag "avatar.png", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "Inscription", new_user_registration_path, class: "dropdown-item" %>
            <%= link_to "Connexion", new_user_session_path, class: "dropdown-item" %>
          </div>
        <% end %>
      </li>
    </ul>
  </div>
</div>





