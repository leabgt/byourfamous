<div class="booking">
  <div class="booking-information d-flex justify-content-center">
    <div class="booking-property">
      <ul>
        <h3 class="text-left">Name</h3>
        <h3 class="text-left">Category</h3>
        <h3 class="text-left">Price</h3>
      </ul>
    </div>
    <div class="booking-details">
      <ul>
        <h3 class="text-left"><%= @celebrity.name %></h3>
        <h3 class="text-left"><%= @celebrity.category.capitalize %></h3>
        <h3 class="text-left"><%= number_to_currency(@celebrity.price, :unit => "€")%></h3>
        <%= link_to "Confirmer", root_path ,data: { confirm: "Votre réservation est validée" }, class: "white-button btn btn-light" %>
      </ul>
    </div>
  </div>
</div>


