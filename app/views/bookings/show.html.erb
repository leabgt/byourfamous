<div class="booking">
  <div class="banner" >
    <h1>My booking summary</h1>
    <hr>
  <div class="booking-information d-flex justify-content-around align-items-center"">
      <div class="booking-property">
        <ul>
          <h3>Name</h3>
          <h3>Category</h3>
          <h3>Price</h3>
        </ul>
      </div>
      <div class="booking-details">
        <ul>
          <p><%= @celebrity.name %></p>
          <p><%= @celebrity.category.capitalize %></p>
          <p>
            <% number_of_days = (@booking.end_date - @booking.start_date).to_i %>
            <% total_price = @celebrity.price * number_of_days %>
            <%= number_to_currency(total_price, :unit => "â‚¬")%>
          </p>
        </ul>
      </div>
    </div>
    <div class = "booking-buttons d-flex justify-content-center">
      <button id="sweet-alert-demo", class="white-button btn btn-light", root_path >Confirm</button>
      <%= link_to "Back", new_celebrity_booking_path, class: "back-button btn btn-ghost" %>
    </div>
  </div>
</div>
