<div class="content-new-booking">
  <div class="booking-form">
    <%= simple_form_for [@celebrity, @booking] do |f| %>
      <h1><%= @celebrity.name %></h1>
      <h3><%= @celebrity.category.capitalize %></h3>
      <div class="date-input">
        <%= f.input :start_date, label: 'Start', as: :string, required: false, input_html: {class: "datepicker"}  %>
        <%= f.input :end_date, label: 'End', as: :string, required: false, input_html: {class: "datepicker"} %>
      </div>
      <h3 id="total-price"><%= number_to_currency(@celebrity.price, :unit => "â‚¬") %></h3>
      <div class="link">
        <%= f.submit "Reserver", class: "white-button"%>
        <%= link_to "Back", celebrities_path, class: "back-button btn btn-flat" %>
      </div>
    <% end %>
  </div>
</div>


